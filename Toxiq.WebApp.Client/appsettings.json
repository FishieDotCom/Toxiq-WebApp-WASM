{
  "ApiBaseUrl": "https://toxiq.xyz/api/",
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Toxiq.WebApp.Client": "Information",
      "Toxiq.WebApp.Client.Services.Authentication": "Debug"

    }
  },
  "Feed": {
    "DefaultPageSize": 20, // Posts per page
    "MaxPageSize": 50, // Maximum posts per request
    "RefreshCooldownMs": 2000, // Minimum time between refreshes
    "LoadMoreThreshold": 100 // Pixels from bottom to trigger load more
  },
  "Performance": {
    "EnableLazyLoading": true, // Lazy load images
    "MaxConcurrentRequests": 3, // Limit concurrent API calls
    "RequestTimeoutMs": 30000 // Request timeout
  },
  "UI": {
    "Theme": "dark",
    "ShowFloatingRefreshButton": true,
    "AnimationDuration": 200,
    "SkeletonCount": 5
  },
  "AllowedHosts": "*"
}